<h1>Tickets</h1>

<% if params[:search] || params[:form_search] %>
  <%= render 'search_form', ticket: Ticket.new %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Title</th>
      <th>Content</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tickets.each do |ticket| %>
      <tr>
        <td>#<%= ticket.id %></td>
        <td><%= ticket.title %></td>
        <td><%= ticket.content %></td>
        <td><%= ticket.status %></td>
        <td><%= link_to 'Show', ticket %></td>
        <td><%= link_to 'Edit', edit_ticket_path(ticket) %></td>
        <td><%= link_to 'Destroy', ticket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%== pagy_nav(@pagy) %>

<br>

<%= link_to 'New Ticket', new_ticket_path %>
